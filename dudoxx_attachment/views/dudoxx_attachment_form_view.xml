<odoo>
    <data>
        <record id="dudoxx_attachment_form_view" model="ir.ui.view">
            <field name="name">dudoxx.attachment.form</field>
            <field name="model">dudoxx.attachment</field>
            <field name="arch" type="xml">
                <form string="Attachment">
                    <header>
                        <button name="submit_for_review" type="object" string="Submit for Review" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                        <button name="approve_review" type="object" string="Approve Review" attrs="{'invisible': [('status', '!=', 'pending_review')]}"/>
                        <button name="reject_review" type="object" string="Reject Review" attrs="{'invisible': [('status', '!=', 'pending_review')]}"/>
                        <button name="finalize_document" type="object" string="Finalize" attrs="{'invisible': [('status', '!=', 'reviewed')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="file_name"/>
                            <field name="creation_date"/>
                            <field name="owner"/>
                            <field name="status" widget="statusbar"/>
                            <field name="content_type"/>
                            <field name="file_data"/>
                            <field name="hash_code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
