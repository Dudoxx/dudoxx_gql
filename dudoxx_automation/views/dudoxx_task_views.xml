<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View Definition -->
        <record id="view_dudoxx_task_tree" model="ir.ui.view">
            <field name="name">dudoxx.task.tree</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View Definition -->
        <record id="view_dudoxx_task_form" model="ir.ui.view">
            <field name="name">dudoxx.task.form</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <form string="Dudoxx Task">
                    <sheet>
                        <group>
                            <!-- Apply the RenderPropertiesWidget to display parent record properties -->
                            <field name="name" widget="render_properties" options="{'recordData': {'name': 'Task Name', 'status': 'Status'}}"/>
                            <field name="name"/>
                            <field name="status"/>
                            <!-- Apply the CountdownWidget to display a countdown -->
                            <field name="countdown_field" widget="countdown_widget"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
