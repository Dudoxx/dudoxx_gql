<odoo>
    <data>
        <!-- Model Definition -->
        <record id="model_dudoxx_task" model="ir.model">
            <field name="name">dudoxx.task</field>
            <field name="model">dudoxx.task</field>
        </record>

        <!-- Tree View Definition -->
        <record id="view_dudoxx_task_tree" model="ir.ui.view">
            <field name="name">dudoxx.task.tree</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View Definition -->
        <record id="view_dudoxx_task_form" model="ir.ui.view">
            <field name="name">dudoxx.task.form</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <form string="Dudoxx Task">
                    <sheet>
                        <group>
                            <field name="name" widget="reverse_text"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
