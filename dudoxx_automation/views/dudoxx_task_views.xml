<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View Definition -->
        <record id="view_dudoxx_task_tree" model="ir.ui.view">
            <field name="name">dudoxx.task.tree</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="name"/>
                    <field name="status"/>
                    <field name="priority_level"/>
                    <field name="due_date"/>
                    <field name="file_name"/>
                </tree>
            </field>
        </record>

        <!-- Form View Definition -->
        <record id="view_dudoxx_task_form" model="ir.ui.view">
            <field name="name">dudoxx.task.form</field>
            <field name="model">dudoxx.task</field>
            <field name="arch" type="xml">
                <form string="Dudoxx Task">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="task_code"/>
                            <field name="status"/>
                            <field name="is_urgent"/>
                            <field name="priority_level"/>
                            <field name="due_date"/>
                            <field name="completion_date"/>
                        </group>
                        <group>
                            <field name="progress"  />
                              <field name="countdown_field" />
                            <field name="countdown_field" widget="countdown_widget"/>
                            <field name="description"/>
                        </group>
                        <group string="File Information">
                            <!-- Filename will be automatically recorded when file is uploaded -->
                            <field name="file_name" readonly="0"/>
                            <field name="file_data" filename="file_name"/>

                            <field name="name" widget="render_properties"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
