<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="dudoxx_media.ImagePreviewWidget">
        <div class="o_image_preview">
            <img t-att-src="record.file_path" alt="Image Preview"/>
        </div>
    </t>

    <t t-name="dudoxx_media.AudioPlayerWidget">
        <div class="o_audio_player">
            <audio controls="controls">
                <source t-att-src="record.file_path" type="audio/mpeg"/>
                Your browser does not support the audio element.
            </audio>
        </div>
    </t>
</templates>