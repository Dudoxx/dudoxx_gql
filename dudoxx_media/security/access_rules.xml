<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Access Rules -->
    <record id="access_rule_dudoxx_media_file_admin" model="ir.rule">
        <field name="name">Dudoxx Media File Admin Access</field>
        <field name="model_id" ref="model_dudoxx_media_file"/>
        <field name="groups" eval="[(4, ref('dudoxx_media.group_dudoxx_media_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="access_rule_dudoxx_media_file_user" model="ir.rule">
        <field name="name">Dudoxx Media File User Access</field>
        <field name="model_id" ref="model_dudoxx_media_file"/>
        <field name="groups" eval="[(4, ref('dudoxx_media.group_dudoxx_media_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
    </record>
    <record id="access_rule_dudoxx_media_file_reviewer" model="ir.rule">
        <field name="name">Dudoxx Media File Reviewer Access</field>
        <field name="model_id" ref="model_dudoxx_media_file"/>
        <field name="groups" eval="[(4, ref('dudoxx_media.group_dudoxx_media_reviewer'))]"/>
        <field name="perm_read" eval="True"/>
    </record>
</odoo>
