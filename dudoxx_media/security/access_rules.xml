<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="module_dudoxx_media_category" model="ir.module.category">
            <field name="name">Dudoxx Media Groups</field>
        </record>

        <record id="group_dudoxx_media_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_dudoxx_media_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_dudoxx_media_reviewer" model="res.groups">
            <field name="name">Reviewer</field>
            <field name="category_id" ref="module_dudoxx_media_category"/>
            <field name="implied_ids" eval="[(4, ref('group_dudoxx_media_user'))]"/>
        </record>

        <record id="group_dudoxx_media_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_dudoxx_media_category"/>
            <field name="implied_ids" eval="[(4, ref('group_dudoxx_media_reviewer'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_dudoxx_media_file_user" model="ir.rule">
            <field name="name">User can only see their own media files</field>
            <field name="model_id" ref="model_dudoxx_media_file"/>
            <field name="groups" eval="[(4, ref('group_dudoxx_media_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('owner_id', '=', user.id)]</field>
        </record>

        <record id="rule_dudoxx_media_file_reviewer" model="ir.rule">
            <field name="name">Reviewer can see all media files</field>
            <field name="model_id" ref="model_dudoxx_media_file"/>
            <field name="groups" eval="[(4, ref('group_dudoxx_media_reviewer'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>